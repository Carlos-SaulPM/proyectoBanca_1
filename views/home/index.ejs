<%- include("../partials/header") %> <br />
  <h2>Clientes</h2>
  <br />
  <div class="container">
    <div class="row">
      <div class="d-flex justify-content-end">
        <div class="d-flex align-items-center" style="width: 280px;">
          <input type="text" class="form-control form-control-sm" placeholder="Buscar cliente" style="height: 38px;" />
          <button class="btn btn-outline-secondary ms-2" type="button" id="button-addon2">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 50 50">
              <path
                d="M 21 3 C 11.621094 3 4 10.621094 4 20 C 4 29.378906 11.621094 37 21 37 C 24.710938 37 28.140625 35.804688 30.9375 33.78125 L 44.09375 46.90625 L 46.90625 44.09375 L 33.90625 31.0625 C 36.460938 28.085938 38 24.222656 38 20 C 38 10.621094 30.378906 3 21 3 Z M 21 5 C 29.296875 5 36 11.703125 36 20 C 36 28.296875 29.296875 35 21 35 C 12.703125 35 6 28.296875 6 20 C 6 11.703125 12.703125 5 21 5 Z">
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
  <br>
  <table class="table table-hover">
    <thead>
      <tr class="text-center">
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido materno</th>
        <th scope="col">Apellido paterno</th>
        <th scope="col">Fecha de nacimiento</th>
        <th scope="col">RFC</th>
        <th scope="col">Fecha de registro</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <%clientes.forEach((cliente, index)=> { %>

        <tr <% if (index%2 !==0) { %> class="table-secondary" <% } %>>
            <td>
              <%=cliente.id%>
            </td>
            <td>
              <%=cliente.nombre%>
            </td>
            <td>
              <%=cliente.primerApellido%>
            </td>
            <td>
              <%=cliente.segundoApellido%>
            </td>
            <td>
              <%=cliente.fechaDeNacimiento%>
            </td>
            <td>
              <%=cliente.encodedKey%>
            </td>
            <td>
              <%=cliente.fechaDeRegistro%>
            </td>
            <td>
              <a href="/clientes/eliminar/<%= cliente.id %>"><svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px"
                  width="30" height="30" viewBox="0 0 50 50" style="fill: #fa5252">
                  <path
                    d="M 21 2 C 19.354545 2 18 3.3545455 18 5 L 18 7 L 8 7 A 1.0001 1.0001 0 1 0 8 9 L 9 9 L 9 45 C 9 46.654 10.346 48 12 48 L 38 48 C 39.654 48 41 46.654 41 45 L 41 9 L 42 9 A 1.0001 1.0001 0 1 0 42 7 L 32 7 L 32 5 C 32 3.3545455 30.645455 2 29 2 L 21 2 z M 21 4 L 29 4 C 29.554545 4 30 4.4454545 30 5 L 30 7 L 20 7 L 20 5 C 20 4.4454545 20.445455 4 21 4 z M 19 14 C 19.552 14 20 14.448 20 15 L 20 40 C 20 40.553 19.552 41 19 41 C 18.448 41 18 40.553 18 40 L 18 15 C 18 14.448 18.448 14 19 14 z M 25 14 C 25.552 14 26 14.448 26 15 L 26 40 C 26 40.553 25.552 41 25 41 C 24.448 41 24 40.553 24 40 L 24 15 C 24 14.448 24.448 14 25 14 z M 31 14 C 31.553 14 32 14.448 32 15 L 32 40 C 32 40.553 31.553 41 31 41 C 30.447 41 30 40.553 30 40 L 30 15 C 30 14.448 30.447 14 31 14 z">
                  </path>
                </svg></a>
            </td>
        </tr>
        <% }); %>
          <!-- class="table-secondary" -->
    </tbody>
  </table>

  <div class="container d-flex justify-content-end">
  <ul class="pagination">
    <li class="page-item disabled">
      <a class="page-link" href="/">&laquo;</a>
    </li>
    <li class="page-item <%= pagina === 1 ? 'active' : '' %>">
      <a class="page-link" href="/?pagina=1">1</a>
    </li>
    <li class="page-item">
      <a class="page-link <%= pagina === 2 ? 'active' : '' %>" href="/?pagina=2">2</a>
    </li>
    <li class="page-item <%= pagina === 3 ? 'active' : '' %>">
      <a class="page-link" href="/?pagina=3">3</a>
    </li>
    <li class="page-item <%= pagina === 4 ? 'active' : '' %>">
      <a class="page-link" href="/?pagina=4">4</a>
    </li>
    <li class="page-item <%= pagina === 5 ? 'active' : '' %>">
      <a class="page-link" href="/?pagina=5">5</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">&raquo;</a>
    </li>
  </ul>
</div>

  </div>
  </body>
  <%- include("../partials/footer") %>